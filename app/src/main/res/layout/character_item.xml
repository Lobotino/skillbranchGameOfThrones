<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/house_img"
        android:layout_width="@dimen/house_img_size"
        android:layout_height="@dimen/house_img_size"
        android:layout_margin="@dimen/character_list_item_margins"
        tools:src="@drawable/lanister_icon"
        />

    <LinearLayout
        android:id="@+id/character_info"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="@dimen/house_img_size"
        android:layout_marginTop="@dimen/character_list_item_margins"
        android:layout_marginBottom="@dimen/character_list_item_margins"
        android:layout_marginEnd="@dimen/character_list_item_margins"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/character_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_primary"
            tools:text="John Snow"
            />

        <TextView
            android:id="@+id/character_titles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/color_gray"
            tools:text="Lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsumlorem ipsum lorem ipsum lorem ipsum lorem ipsum "
            />
    </LinearLayout>
</LinearLayout>